<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bill_view_det"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavan.tryapp.billViewDet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TableRow>
            <ImageView
                android:id="@+id/starBF"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:paddingLeft="30dp"
                android:src="@drawable/ic_fav"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:text="Bill ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/billIDId"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/titleId"
                android:textColor="#000000"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Bill Type:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/typeId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Sponsor:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/spId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Chamber:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/chambBId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/stBId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Introduced on:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/intId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Congress URL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:autoLink="web"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/conId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Version Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/verId"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Bill URL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:textSize="15dp"
                android:paddingLeft="100dp"
                android:id="@+id/billUrlId"
                android:autoLink="web"
                android:textColor="#000000"/>
        </TableRow>
    </TableLayout>
    </ScrollView>
</RelativeLayout>
