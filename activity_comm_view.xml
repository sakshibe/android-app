<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comm_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavan.tryapp.commViewActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TableRow>
        <ImageView
            android:id="@+id/starCF"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="30dp"
            android:src="@drawable/ic_fav"
            />

    </TableRow>
    <TableRow>
        <TextView
            android:text="Committee ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:id="@+id/comIDId"
            android:textColor="#000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:id="@+id/nmId"
            android:textColor="#000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Chamber:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:id="@+id/chmId"
            android:textColor="#000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Parent Committee:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:id="@+id/parId"
            android:textColor="#000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Contact:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:id="@+id/conId"
            android:textColor="#000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Office:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:id="@+id/ofcId"
            android:textColor="#000000"/>
    </TableRow>


</TableLayout>
    </ScrollView>
</RelativeLayout>
